{
  "manifest_version": 2,
  "name": "OpIn - Comment Anywhere",
  "description": "Comment on any post or article on any website.",
  "version": "1.3",
  "offline_enabled": false,

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "comments.html"
  },

  "icons": { 
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon-128.png"
  },
  
  "permissions": [
    "tabs",
    "https://ajax.googleapis.com/"
  ]
}